# Application
NODE_ENV=production
PORT=3001

# Cloudflare Access Authentication
# Set to 'true' to enable Cloudflare Access authentication
CF_ACCESS_ENABLED=false

# Development mode user (only used when CF_ACCESS_ENABLED=false)
DEV_USER_EMAIL=dev@example.com
DEV_USER_NAME=Development User

# Cloudflare Access Configuration (when enabled)
# Your Cloudflare Access Team Domain (e.g., yourteam.cloudflareaccess.com)
# Required when CF_ACCESS_ENABLED=true
# CF_ACCESS_TEAM_DOMAIN=

# Cloudflare Access Policy AUD (Application Audience) tag
# Required when CF_ACCESS_ENABLED=true
# CF_ACCESS_AUD=

# Git Sync Configuration
# Set these to enable automatic git commit and push for comments
# GIT_REPO_URL=https://github.com/username/repository.git
# GIT_USERNAME=your-github-username
# GIT_ACCESS_TOKEN=your-github-personal-access-token

# Git Auto-Pull Configuration
# Interval in milliseconds for automatic git pull (default: 300000 = 5 minutes)
# GIT_PULL_INTERVAL=300000
